<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <RootNamespace>Video_Downloader</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>icons\logo.ico</ApplicationIcon>
    <StartupObject>Video_Downloader.Program</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="lib\libvideo.dll" />
    <None Remove="lib\MediaToolkit.dll" />
    <None Remove="lib\Newtonsoft.Json.dll" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="lib\libvideo.dll" />
    <EmbeddedResource Include="lib\MediaToolkit.dll" />
    <EmbeddedResource Include="lib\Newtonsoft.Json.dll" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ilmerge" Version="3.0.41" />
    <PackageReference Include="VideoLibrary" Version="3.2.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="MediaToolkit">
      <HintPath>lib\MediaToolkit.dll</HintPath>
    </Reference>
    <Reference Include="Newtonsoft.Json">
      <HintPath>lib\Newtonsoft.Json.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <Compile Update="System\Windows\Forms\TablessControl.cs">
      <SubType>Component</SubType>
    </Compile>
  </ItemGroup>
	<ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
<Target Name="ILMerge">
	<!-- the ILMergePath property points to the location of ILMerge.exe console application -->
	<Exec Command="$(ILMergeConsolePath) bin\Debug\net5.0-windows\Video-Downloader.exe ^&#xD;&#xA;	  /out:bin\Debug\net5.0-windows\Downloader.dll ^&#xD;&#xA;bin\Debug\net5.0-windows\Video-Downloader.dll ^&#xD;&#xA;bin\Debug\net5.0-windows\MediaToolkit.dll ^&#xD;&#xA;bin\Debug\net5.0-windows\Newtonsoft.Json.dll ^&#xD;&#xA;bin\Debug\net5.0-windows\Video-Downloader.runtimeconfig.dev.json ^&#xD;&#xA;bin\Debug\net5.0-windows\Video-Downloader.runtimeconfig.json ^&#xD;&#xA;bin\Debug\net5.0-windows\Video-Downloader.deps.json" />
</Target>
</Project>